@using FungeyeApp.Models;

@{
    ViewBag.Title = "IdentifyMushrooms";
}

<form action="/Mushroom/ListShroomsByCapChar" method="get">
    <h3>CapChar</h3>
    <select name="CapChar">
        @foreach (var CapChar in ViewBag.CapChars)
        {
            <option value="@CapChar">@CapChar</option>
        }
    </select>
    @*<select>
        @foreach (var Stem in ViewBag.Stems)
        {
            <option value="@Stem">@Stem</option>
        }
    </select>*@
    <input type="submit" value="Search by CapChar" />
</form>

<h2>IdentifyMushrooms</h2>
<table class="table">
    <tr>
        <th>Mushroom Picture</th>
        <th>Mushroom ID</th>
        <th>Mushroom Species</th>
        <th>Mushroom Common Name</th>
        <th>Mushroom Cap Characteristic</th>
        <th>Mushroom Stem</th>
        <th>Edibility</th>
    </tr>
    @foreach (var Shrooms in ViewBag.MushroomList)
    {
        <tr>
            <td>
                <img src="~/Content/IndexPics/@Shrooms.MushroomID .jpg" style="height:130px; width: 130px" />
            </td>
            <td>
                #@Shrooms.MushroomID
            </td>
            <td>
                @Shrooms.Species
            </td>
            <td>
                @Shrooms.CommonName
            </td>
            <td>
                @Shrooms.CapChar
            </td>
            <td>
                @Shrooms.Stem
            </td>
            <td>

                @Shrooms.Edibility
                Is this the mushroom you picked? <input type="radio" name="shroom" value="@Shrooms.MushroomID" />

            </td>
        </tr>
    }
</table>